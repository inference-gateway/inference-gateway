# Inference Gateway Configuration for Monitoring Example

# ==============================================================================
# Provider API Keys (Add the providers you want to use)
# ==============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Cloudflare
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# ==============================================================================
# Telemetry Configuration (Required for monitoring)
# ==============================================================================

TELEMETRY_ENABLE=true
TELEMETRY_METRICS_PORT=9464

# ==============================================================================
# MCP Configuration (Optional - for tool call metrics)
# ==============================================================================

# Enable MCP middleware for function/tool call tracking
MCP_ENABLE=true

# Example MCP servers (uncomment to enable)
# MCP_SERVERS_filesystem_server_COMMAND=npx
# MCP_SERVERS_filesystem_server_ARGS=["@modelcontextprotocol/server-filesystem", "/tmp"]

# ==============================================================================
# A2A Configuration (Optional - for agent tool call metrics)
# ==============================================================================

# Enable A2A middleware for agent tool call tracking
A2A_ENABLE=true

# Example A2A agents (uncomment to enable)
# A2A_AGENTS_calculator=http://calculator-agent:8080

# ==============================================================================
# General Configuration
# ==============================================================================

# Environment (for telemetry labeling)
ENVIRONMENT=development

# Log level
LOG_LEVEL=info

# Server configuration
PORT=8080
HOST=0.0.0.0